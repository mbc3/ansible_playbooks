default menu.c32
prompt 0
timeout 30
ONTIMEOUT local

menu title PXE Boot Menu

label 1
menu label ^1) Install AlmaLinux 10
kernel almalinux/images/pxeboot/vmlinuz
initrd almalinux/images/pxeboot/initrd.img
append inst.repo=http://192.168.7.113/almalinux
label 2
menu label ^2) Boot from local drive
localboot 0
